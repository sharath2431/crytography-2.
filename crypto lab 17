from base64 import b64decode, b64encode

def simple_xor_decrypt(ciphertext, key):
    decrypted = ''.join(chr(c ^ ord(key[i % len(key)])) for i, c in enumerate(ciphertext))
    return decrypted

if __name__ == "__main__":
    key = "abcdefgh"  # 8-char key
    # Example: ciphertext encoded in base64 for demo
    encoded_cipher = b64encode(bytes([ord(c) ^ ord(key[i % len(key)]) for i, c in enumerate("HelloDES")]))
    
    print("Encoded (fake DES style):", encoded_cipher.decode())

    # Now decrypt
    ciphertext = b64decode(encoded_cipher)
    decrypted_text = simple_xor_decrypt(ciphertext, key)
    print("Decrypted text:", decrypted_text)
